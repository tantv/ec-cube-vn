<div class="item_visual main-product-image os-main-image {{class|default('mb-3')}}">
  {% for ProductImage in product.ProductImage %}
    <div class="slide-item os-main-image__item">
      <img src="{{ asset(ProductImage, 'save_image') }}" alt="{{ product.name }}">
    </div>
  {% else %}
    <div class="slide-item os-main-image__item">
      <img src="{{ asset(''|no_image_product, 'save_image') }}" alt="{{ product.name }}"/>
    </div>
  {% endfor %}
</div>
<div class="product-image-thumbails d-none d-md-flex row no-gutters os-thumb-image {{class|default('')}}">
  {% for ProductImage in product.ProductImage %}
    <div class="slideThumb os-thumb-image__item col-3 text-center" data-index="{{ loop.index0 }}">
      <img src="{{ asset(ProductImage, 'save_image') }}" alt="{{ product.name }}">
    </div>
  {% endfor %}
</div>