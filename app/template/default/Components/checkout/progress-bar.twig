<div id="progress-bar" class="row">
  <div class="col-12">
    <ul class="os-progress">
      {% set step = 1 %}
      <li class="os-progress__item {{step1|default('')}}">
        <div class="os-progress__number">{{ step }}{% set step = step + 1 %}
        </div>
        <div class="os-progress__label">{{ 'front.cart.nav__cart_items'|trans }}
        </div>
      </li>
      {% if is_granted('ROLE_USER') == false %}
        <li class="os-progress__item {{step2|default('')}}">
            <div class="os-progress__number">{{ step }}{% set step = step + 1 %}
            </div>
            <div class="os-progress__label">{{ 'front.cart.nav__customer_info'|trans }}
            </div>
        </li>
      {% endif %}
      <li class="os-progress__item {{step3|default('')}}">
        <div class="os-progress__number">{{ step }}{% set step = step + 1 %}
        </div>
        <div class="os-progress__label">{{ 'front.cart.nav__order'|trans }}
        </div>
      </li>
      <li class="os-progress__item {{step4|default('')}}">
        <div class="os-progress__number">{{ step }}{% set step = step + 1 %}
        </div>
        <div class="os-progress__label">{{ 'front.cart.nav__confirm'|trans }}
        </div>
      </li>
      <li class="os-progress__item {{step5|default('')}}">
        <div class="os-progress__number">{{ step }}{% set step = step + 1 %}
        </div>
        <div class="os-progress__label">{{ 'front.cart.nav__complete'|trans }}
        </div>
      </li>
    </ul>
  </div>
</div>