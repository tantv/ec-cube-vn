{% extends 'Components/form/base_input.twig' %}
{% set custom_class = customClass|default('') %}

{% block formLabel %}
  {{ form_label(form.email, 'common.mail_address', { 'label_attr': { 'class': 'col-form-label' }}) }}
{% endblock %}

{% block formContent %}
  <div class="row {{ has_errors(form.email.first) ? 'is-invalid'}}">
    <div class="col-12">
      {{ form_widget(form.email.first, { 'attr': { 'placeholder': 'common.mail_address_sample', 'class': 'form-control' }}) }}
      {{ form_errors(form.email.first) }}
    </div>
  </div>
{% endblock %}
